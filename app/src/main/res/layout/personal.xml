<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Header Section -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안드로이드스튜디오"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20214058정예나"
            android:textSize="16sp"
            android:layout_gravity="center"/>

        <!-- Balance Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#5DF44336">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/mileage_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50,000P"
                    android:textSize="30sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/points_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근 사용 포인트: 2,00P"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/discount_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근 충전 포인트: 10,000P"
                    android:textColor="@android:color/black"/>

                <Button
                    android:id="@+id/card_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="포인트 충전"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="카드 등록"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="설정"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="고객센터"/>
        </LinearLayout>
    </LinearLayout>
